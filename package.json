{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev-hero": "yarn workspace github-actions-hero dev",
    "dev-interpreter": "yarn workspace github-actions-interpreter dev",
    "dev": "concurrently --kill-others-on-fail \"yarn dev-interpreter\" \"yarn dev-hero\"",
    "build-hero": "yarn workspace github-actions-hero build",
    "build-interpreter": "yarn workspace github-actions-interpreter build",
    "build": "concurrently --kill-others-on-fail \"yarn build-interpreter\" \"yarn build-hero\""
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/codemirror": "0.0.91",
    "@types/jest": "^25.2.1",
    "@types/js-yaml": "^3.12.3",
    "@types/lz-string": "^1.3.34",
    "@types/micromatch": "^4.0.1",
    "@types/node": "^14.0.1",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-syntax-highlighter": "^11.0.4",
    "babel-jest": "^26.0.1",
    "microbundle": "^0.12.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.0",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "concurrently": "^5.2.0"
  }
}
